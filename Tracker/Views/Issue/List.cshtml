@model IEnumerable<Tracker.Models.Issue>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Zgłoszenia</h2>



<p>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Issue")'">Dodaj</button>
</p>
<table class="table table-striped table-hover">
    <tr class="info">
        <th>@Html.DisplayNameFor(model => model.Title)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th>Agent</th>
        <th>Zgłoszone przez</th>
        <th>@Html.DisplayNameFor(model => model.Status.Name)</th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrderBy(x=>x.Id))
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.Agent.FullName)</td>
            <td>@Html.DisplayFor(modelItem => item.Notifier.FullName)</td>
            <td>@Html.DisplayFor(modelItem => item.Status.Name)</td>
            <td>
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("List", "Notification", new {issueId = item.Id })'">Szczegóły</button>
                <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Delete", "Issue",new {id = item.Id })'">Usuń</button>
            </td>
        </tr>
    }
</table>
